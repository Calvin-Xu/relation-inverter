{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 